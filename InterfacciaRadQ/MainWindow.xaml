        xmlns:local="clr-namespace:InterfacciaRadQ"
        mc:Ignorable="d"
        Title="Radice Quadrata" Height="305" Width="400" ResizeMode="CanMinimize">
    <Grid Background="#FF96F0F9">
        <Label Content="Inserire il numero:" HorizontalAlignment="Left" Margin="54,50,0,0" VerticalAlignment="Top" Width="138" FontSize="16"/>
        <TextBox Name="txtnum" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="197,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="31" FontSize="16"/>
        <Button Name="btncalc" Content="Calcola" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="100" FontSize="18" Click="btncalc_Click"/>
        <TextBox IsReadOnly="True" Name="txtris" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="54,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" Height="27" FontSize="16"/>

    </Grid>
</Window>
